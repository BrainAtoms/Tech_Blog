<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
       <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Comment Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-desc">Comment:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Comment</button>
      </div>
    </form>
  </div>

     {{#if posts.length}}
    <div class="col-md-6 post-list">
      <h3>Current Comments:</h3>

      {{#each posts as |posts|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4>{{posts.name}}</h4>
          </div>
          <div class="col-md-4">
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{posts.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>

